@model FoxClub.Fox
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <form action="foxInfo" method="get">
        <button class="linkButton" type="submit" name="Name" value="@Model.Name">Information</button>
    </form>
    <form action="nutritionStore" method="get">
        <button class="linkButton" type="submit" name="Name" value="@Model.Name">Nutrition Store</button>
    </form>
    <form action="trickCenter" method="get">
        <button class="linkButton" type="submit" name="Name" value="@Model.Name">Trick Center</button>
    </form>
    <form action="actionHistory" method="get">
        <button class="linkButton" type="submit" name="Name" value="@Model.Name">Action History</button>
    </form>
    <form action="/greenfox/learnATrick" method="post">
        @if (Model.Tricks.Count() == Model.TricksToLearn.Count())
        {
            <p>There are no tricks to learn</p>
        }
        else
        {
            <label for="tricks">Tricks:</label>
            <select id="Tricks" name="trick">
                @for (int i = 0; i < Model.TricksToLearn.Count(); i++)
                {
                    if (!Model.Tricks.Contains(Model.TricksToLearn[i]))
                    {
                        <option value="@Model.TricksToLearn[i]">@Model.TricksToLearn[i]</option>
                    }
                }
            </select>
            <button type="submit" name="Name" value="@Model.Name">Submit</button>
        }
    </form>
</body>
</html>
<style>
    .linkButton {
        outline: none;
        background-color: transparent;
        font-size: 15px;
        text-decoration: underline;
        border: none;
        color: blue;
    }

        .linkButton:hover {
            color: purple;
            cursor: pointer;
        }
</style>