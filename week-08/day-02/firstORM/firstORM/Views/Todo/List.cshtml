@model firstORM.Models.ListViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <a href="addTodo">Add new Todo</a>
    @if (Model.Todos.Count() > 0)
    {
        
        <table>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Is Done</th>
                    <th>Is Urgent</th>
                    <th>Date Of Creation</th>
                </tr>
            @for (int i = 0; i < Model.Todos.Count(); i++)
            {
        <tr>
            <td>@Model.Todos[i].Id</td>
            <td>@Model.Todos[i].Title</td>
            <td>@Model.Todos[i].IsDone</td>
            <td>@Model.Todos[i].IsUrgent</td>
            <td>@Model.Todos[i].DateOfCreation</td>
            <td><a href="@Model.Todos[i].Id/delete">delete</a></td>
            <td><a href="@Model.Todos[i].Id/edit">edit</a></td>
        </tr>
            }
        
        </table>
    }
    else
    {
        <p>No Todos Yet</p>
    }   
</body>
</html>
<style>
    a{
        text-decoration: underline;
        font-size: 20px;
    }
    td,table{
        border: 1px solid black;
        border-collapse: collapse;
    }
    th,td{
        padding: 20px;
    }
    tr{
        background-color: white;
    }
    tr:nth-child(even){
        background-color: lightgray;
    }
    th{
        color: white;
        background-color: black;
        border: 1px solid white;
    }
    table {
        position: absolute;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 30px;
        font-family: 'Comic Sans MS';
        width: 60%;
    }
</style>