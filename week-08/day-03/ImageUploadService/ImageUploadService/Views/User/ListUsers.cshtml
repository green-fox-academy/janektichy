
@model ImageUploadService.Models.UserViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @if (Model.Users is not null)
    {
        <ol>
            @for (int i = 0; i < Model.Users.Count(); i++)
            {
                <li>
                    <form asp-controller="User" asp-action="ShowImages" method="get">
                        <button name="id" value="@Model.Users[i].UserId"> @Model.Users[i].Name has @Model.Users[i].AllImages.Count() images</button>
                    </form>
                </li>
            }
        </ol>
    }
    else
    {
        <p>There are no images from any user yet</p>
    }
</body>
</html>